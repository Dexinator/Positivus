---
import Container from "./Container.astro"
import Topic from "./Topic.astro";
import servicesData from './Data/services.json';
---
<Container>
    <div class="relative flex flex-col items-center md:flex-row text-color:white" id="services">
        <Topic title="Nuestros servicios" description="En Portolan Consultores te ayudamos a introducir tus productos y servicios al mercado mexicano a través de estrategias que te permitan solucionar los retos que supone el inicio de operaciones en el país, combinando las nuevas tecnologías y el conocimiento del mercado de nuestros expertos.">
        </div>
        
        <div class="flex-row items-center py-5">
            <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4">
                
                <!-- card start-->
                {
                    servicesData.map(({ background, name1, name2, descripcion, arrow, link, image} ) => (
                    <div class={background}>
                        <div class="flex-col justify-center items-start gap-[93px] inline-flex">
                            <div class="flex-col justify-start items-start flex">
                                <div class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                                    <div class=" text-3xl font-medium">{name1}</div>
                                </div>
                                <div class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                                    <div class="text-3xl font-medium">{name2}</div>
                                </div>
                                <div class="text-xl font-normal leading-7">{descripcion}</div>
                            </div>
                            <a class="justify-start items-center gap-[15px] inline-flex" href={link}>
                                <div class="w-[41px] h-[41px] relative">
                                    <svg width="41" height="41" viewBox="0 0 41 41" xmlns="http://www.w3.org/2000/svg">
                                        <g id="Icon">
                                            <circle id="Ellipse 1" cx="20.5" cy="20.5" r="20.5" fill="#091F2C"/>
                                            <path id="Arrow 1" d="M11.25 24.701C10.5326 25.1152 10.2867 26.0326 10.701 26.75C11.1152 27.4674 12.0326 27.7133 12.75 27.299L11.25 24.701ZM30.7694 16.3882C30.9838 15.588 30.5089 14.7655 29.7087 14.5511L16.6687 11.0571C15.8685 10.8426 15.046 11.3175 14.8316 12.1177C14.6172 12.9179 15.0921 13.7404 15.8923 13.9548L27.4834 17.0607L24.3776 28.6518C24.1631 29.452 24.638 30.2745 25.4382 30.4889C26.2384 30.7033 27.0609 30.2284 27.2753 29.4282L30.7694 16.3882ZM12.75 27.299L30.0705 17.299L28.5705 14.701L11.25 24.701L12.75 27.299Z" fill="#EFDBB2"/>
                                        </g>
                                    </svg>
                                    
                                </div>
                                <div class="text-xl font-normal leading-7">Conocer más</div>
                            </a>
                        </div>
                        <div class="w-[210px] h-[170px] pt-0.5 pb-[1.95px] justify-center items-center flex">
                            <img class="hidden md:block" src={image} />
                        </div>
                    </div>
                    ))
                }
                <!-- card end-->
            </div>
        </div>
        
        <div class="flex-row items-center my-6 p-14 bg-zinc-100 rounded-[45px]">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="justify-start items-center gap-[275px] flex">
                    <div class="flex-col justify-start items-start gap-[26px] inline-flex text-black">
                        <div class="text-3xl font-medium">Let’s make things happen</div>
                        <div class="text-lg font-normal">Contact us today to learn more about how our digital marketing services can help your business grow and succeed online.</div>
                        <a href="/" class="px-[35px] py-5 bg-zinc-900 hover:bg-white text-white hover:text-black border rounded-[14px] justify-start items-start gap-2.5 inline-flex">
                            <div class="text-center text-xl font-normal leading-7">Get your free proposal</div>
                        </a>
                    </div>
                </div>
                <div class="hidden md:grid justify-items-center -m-20">
                    <img src="/services/Illustration.svg" width="50%" alt="cat"/>
                </div>
            </div>
        </div>
    </Container>