---
import benefits from "./Data/beneficios.json"
---

    <div class="container mx-auto max-w-5xl flex gap-12 flex-wrap items-start justify-center md:justify-between">
        {
            benefits.filial.map(({beneficio,image} ) => (
            <div class="grid gap-4 justify-items-center text-center md:flex-1">
                <div class="rounded-full border-8 border-black p-4">
                    <div class="justify-center items-center flex w-14 h-14">
                        <img  src={image}/>
                    </div>
                </div>
                <h3 class="text-3xl font-bold">{beneficio}</h3>
            </div>
            ))
        }
    </div>